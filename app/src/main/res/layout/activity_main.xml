<?xml version="1.0" encoding="utf-8"?>
<ScrollView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorFondo">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:weightSum="100"
                >

            <ImageView
                    android:id="@+id/map"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/mapmarker"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"
                    />

            <TextView
                    android:id="@+id/domicilio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/domicilio"
                    android:layout_toRightOf="@+id/map"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="90"
                    android:layout_gravity="center_vertical"

                    />

            <ImageView
                    android:id="@+id/flecha"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chevronright"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"

                    />

        </LinearLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/imagenProducto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/zapatillas"
                    android:background="#FFFFFF">

            </ImageView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cantidadFotos"
                    android:layout_alignBottom="@+id/imagenProducto"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorFondoOscuro"
                    android:textColor="#FFFFFF"
                    android:padding="5dp"/>

        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cantidadVendidos"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15dp"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/descripcionProducto"
                    android:fontFamily="sans-serif"
                    android:textSize="20dp"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vendedor"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15dp"/>

            <TextView
                    android:id="@+id/precioViejo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/precioViejo"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15dp"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/precioNuevo"
                        android:fontFamily="sans-serif"
                        android:textSize="35dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/descuento"
                        android:fontFamily="sans-serif"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="100">

                <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/creditcard"
                        android:layout_weight="5"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"

                        />


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="90"
                        android:text="Paga en hasta 12 cuotas"
                        android:background="@drawable/border"
                        android:paddingBottom="15dp"/>
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="5"
                        android:src="@drawable/chevronright"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"

                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="100">
<!--                <ImageView-->
<!--                        android:layout_width="18dp"-->
<!--                        android:layout_height="18dp"-->
<!--                        android:src="@drawable/truck"-->
<!--                        android:layout_weight="5"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:layout_alignParentRight="true"-->
<!--                        android:layout_marginRight="20dp"-->
<!--                        android:layout_marginTop="5dp"/>-->
                <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/undo"
                        android:layout_weight="5"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="90"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Envio Gratis"
                            android:textColor="@color/colorDescuento"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Llega entre el 4 y el 8 de Octubre"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Beneficio Mecardo Puntos"
                            android:background="@drawable/border"
                            android:paddingBottom="15dp"
                            />
                </LinearLayout>
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="5"
                        android:src="@drawable/chevronright"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="100">
                <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/undo"
                        android:layout_weight="5"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="90"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Devolución Gratis"
                            android:textColor="@color/colorDescuento"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Tenés 30 días desde que lo recibís"
                            />
                </LinearLayout>
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/chevronright"
                        android:layout_weight="5"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</ScrollView>